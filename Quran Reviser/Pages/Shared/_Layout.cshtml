<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quran - Page: @ViewData["Title"]</title>
    <link rel="icon" href="~/logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />        
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light mb-1" style="background-color: #8ecf97;box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
            <div class="container-fluid">
                <!-- Left side: Flag and Arrow -->
                <div class="d-flex">
                    <div id="leftContent">
                        <!-- Language picker -->
                        <div class="dropdown">
                                                        
                            <button class="btn language-picker dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                🌍 <span style="font-weight:700; font-size:larger">EN</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-start" aria-labelledby="languageDropdown">
                                <li><a class="dropdown-item" href="#">English</a></li>
                                <li><a class="dropdown-item" href="#">Français</a></li>
                                <li><a class="dropdown-item" href="#">Español</a></li>                                
                                <li><a class="dropdown-item" href="#">العربية</a></li>
                                <!-- Add more languages as needed -->
                            </ul>
                        </div>

                    </div>
                </div>

                <!-- Center: Title of the page -->
                <div class="mx-auto text-center">
                    <h3 class="mb-0" style="font-family:Britannic; font-size:40px; font-weight:700">
                        🕯️ 📖  Quran Reviser  📖 🕯️
                        </h3>
                    <!-- Arabic title: "مُراجع القرآن"-->
                </div>

                <!-- Right side: Logo and Login/Signup -->
                <div class="d-flex me-2">
                    <div id="rightContent">
                        <div>
                            <a href="" class="text-decoration-none">
                                <span style="font-weight:700; font-size:20px; color:black">👤Connect</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-1" style="box-shadow: 0px -4px 6px rgba(0, 0, 0, 0.1);">
        <div class="container">
            Made with 💚 for Allah and his Messenger (pbuh)
            <!-- &copy; 2025 - Quran Reviser - <a asp-area="" asp-page="/Privacy">Privacy</a> -->
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>